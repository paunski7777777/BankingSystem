@using YourMoney.Web.Infrastructure

@model YourMoney.Web.Models.Deposits.AllDepositsViewModel

@{
    ViewData["Title"] = "Каталог";
}
    <div class="container">
        <h2 class="text-center">@this.ViewData["Title"]</h2>
        @if (!Model.Deposits.Any())
        {
            <div class="container">
                <h3 class="text-left" style="color:red">Все още не са добавени депозити.</h3>
            </div>
        }
        else
        {
            <div class="table-responsive-lg">
                <table class="table-hover table">
                    <tbody>
                    <tr class="active">
                        <th>Банка</th>
                        <th>Име на депозита</th>
                        <th>Минимална сума</th>
                        <th>Лихва</th>
                        <th>Изплащане на лихви</th>
                        <th></th>
                    </tr>
                    @foreach (var deposit in Model.Deposits)
                    {
                        <tr>
                            <td>@deposit.BankName</td>
                            <td>@deposit.Name</td>
                            <td>@deposit.MinimumAmount</td>
                            <td>@deposit.Interest</td>
                            <td>@deposit.InterestPayment.GetDisplayName()</td>
                            <td>
                            <a asp-area="" asp-controller="Deposits" asp-action="Details" asp-route-id="@deposit.Id" class="btn btn-primary text-white">
                                Детайли
                            </a>
                            <td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>