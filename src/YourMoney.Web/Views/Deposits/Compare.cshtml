@using YourMoney.Models.Enums

@model YourMoney.Web.Models.Deposits.CompareDepositInputModel

@{
    ViewData["Title"] = "Сравни оферти";
}
<div class="container">
    <h2 class="text-center">Намерете най-добрата оферта за Срочен депозит</h2>
    <hr />
    <form asp-controller="Deposits" asp-action="Compare" method="post">
        <div class="form-row font-weight-bold">
            <div class="form-group col-md-6">
                <label asp-for="Amount"></label>
                <input asp-for="Amount" type="number" min="0" class="form-control" placeholder="5000">
            </div>
            <div class="form-group col-md-6 font-weight-bold">
                <label asp-for="Currency"></label>
                <select asp-for="Currency" asp-items="Html.GetEnumSelectList<Currency>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 font-weight-bold">
                <label asp-for="DepositTerm"></label>
                <select asp-for="DepositTerm" asp-items="Html.GetEnumSelectList<DepositTerm>()" class="form-control"></select>
            </div>
            <div class="form-group col-md-6 font-weight-bold">
                <label asp-for="InterestPayment"></label>
                <select asp-for="InterestPayment" asp-items="Html.GetEnumSelectList<InterestPayment>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row font-weight-bold">
            <label asp-for="DepositFor" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <select asp-for="DepositFor" asp-items="Html.GetEnumSelectList<DepositFor>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 font-weight-bold">
                <label asp-for="InterestType"></label>
                <select asp-for="InterestType" asp-items="Html.GetEnumSelectList<InterestType>()" class="form-control"></select>
            </div>
            <div class="form-group col-md-6 font-weight-bold">
                <label asp-for="IncreasingAmount"></label>
                <select asp-for="IncreasingAmount" asp-items="Html.GetEnumSelectList<IncreasingAmount>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 font-weight-bold">
                <label asp-for="OverdraftOpportunity"></label>
                <select asp-for="OverdraftOpportunity" asp-items="Html.GetEnumSelectList<OverdraftOpportunity>()" class="form-control"></select>
            </div>
            <div class="form-group col-md-6 font-weight-bold">
                <label asp-for="CreditOpportunity"></label>
                <select asp-for="CreditOpportunity" asp-items="Html.GetEnumSelectList<CreditOpportunity>()" class="form-control"></select>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Сравни оферти</button>
        </div>
    </form>
</div>