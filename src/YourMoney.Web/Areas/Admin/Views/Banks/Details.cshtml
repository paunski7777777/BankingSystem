@model YourMoney.Web.Areas.Admin.Models.Banks.BankDetailsViewModel

@{
    ViewData["Title"] = "Детайли на банката";
}

<div class="container">
    <h1>@this.ViewData["Title"]</h1>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Name"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
        </dl>
        <h6>Депозити</h6>
        <table class="table table-active">
            <tbody>
                @foreach (var deposit in Model.Deposits)
                {
                    <tr>
                        <td>
                            @deposit.Name -
                            <a asp-area="Admin" asp-controller="Deposits" asp-action="Edit" asp-route-id="@deposit.Id">Промени</a> |
                            <a asp-area="Admin" asp-controller="Deposits" asp-action="Details" asp-route-id="@deposit.Id">Детайли</a> |
                            <a asp-area="Admin" asp-controller="Deposits" asp-action="Delete" asp-route-id="@deposit.Id">Изтрий</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-area="Admin" asp-controller="Banks" asp-action="Edit" asp-route-id="@Model.Id">Промени</a>
        |
        <a asp-area="Admin" asp-controller="Banks" asp-action="All">Назад към всички банки</a>
    </div>
</div>